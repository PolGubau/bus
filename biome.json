{
	"$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on",
				"recommended": true,
				"useSortedAttributes": "on",
				"useSortedKeys": "on",
				"useSortedProperties": "on"
			}
		},
		"enabled": true
	},
	"files": {
		"experimentalScannerIgnores": ["**/*.test.ts", "**/*.spec.ts", "src/global/routeTree.gen.ts"],
		"ignoreUnknown": true,
		"includes": ["**", "!**/dist/**", "!**/*.generated.ts"]
	},

	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnknownPseudoElement": "off",
				"noUnknownTypeSelector": "off"
			},
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "info"
			}
		}
	},
	"root": true,
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	}
}
